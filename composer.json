{
  "name": "filmtools/standards",
  "description": "Interfaces and Classes for FilmTools' Film developing standards",
  "type": "library",

  "license": "MIT",

  "authors": [
    {
      "name":  "Carsten Witt",
      "role":  "Author"
    }
  ],

  "autoload": {
    "psr-4": {
      "FilmTools\\Standards\\": "src/"
    }
  },

  "require": {
    "php": "^7.0"
  },

	"autoload-dev": {
	  	"psr-4": { "tests\\": "tests/src" }
	},

  "require-dev": {
      "php-coveralls/php-coveralls": "^2.0",
      "phpunit/phpunit": "^5.7|^6.0|^7.0",
      "spatie/phpunit-watcher": "^1.8",
      "pimple/pimple": "^3.2"
  },

  "suggest": {
      "pimple/pimple": "This library comes with a Pimple ServiceProvider."
  },

  "scripts": {
        "phpunit": "phpunit --colors=auto",
        "watch": "phpunit-watcher watch",
        "test": [
            "@phpunit"
        ]
  }
}
